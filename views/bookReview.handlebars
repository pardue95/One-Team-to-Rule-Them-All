<h1>Reviews For</h1>


{{#each reviews as |review|}}
  <p class = "review-list">
      {{> book-review review }}
  </p> <br>

{{/each}}


{{!-- <a href="/dashboard">Submit a Review For This Book</a> --}}


<section>
  <h2>Create a Review</h2>

  <form class="new-review-form">
    <div>
      <label for="review-title">Like What's Your Opinion, Man?</label>
      <input type="text" id="review" name="Review-title" />
    </div>
    <button type="submit" class="reviewSubmit">Create</button>
  </form>
</section>

<script src="/public/javascript/add-review.js"></script>

