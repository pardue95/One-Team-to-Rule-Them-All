


{{#each reviews as |review|}}
  <p class = "review-list">
  
      {{> book-review review }}
  </p> <br>

{{/each}}


{{!-- <a href="/dashboard">Submit a Review For This Book</a> --}}


<section>
  <h2>Create a Review</h2>

  <form class="new-review-form">
    <div>
      <label for="review-title">What's Your Opinion, Man?</label>
      <input type="text" id="review" name="review-title" />
    </div>
    <button type="submit" class="reviewClick" id="reviewSubmit" value={{user_id}}>Create</button>
    <button type="submit" class="delete-review-btn" id="reviewSubmit" value={{user_id}}>Delete</button>
  </form>
</section>

<script src="/javascript/add-review.js"></script>
<script src="/javascript/delete-review.js"></script>
